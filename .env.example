# ─── App ────────────────────────────────────────────────────
VITE_APP_NAME=Aurban
VITE_APP_URL=https://aurban.com
VITE_DEFAULT_COUNTRY=NG
VITE_DEFAULT_LANGUAGE=en
VITE_DEFAULT_CURRENCY=NGN

# ─── Maps (use one) ─────────────────────────────────────────
VITE_GOOGLE_MAPS_KEY=your_google_maps_key_here
VITE_MAPBOX_TOKEN=your_mapbox_token_here

# ─── Identity Verification ──────────────────────────────────
# Smile Identity — best African coverage
VITE_SMILE_IDENTITY_PARTNER_ID=your_partner_id_here
VITE_SMILE_IDENTITY_API_KEY=your_api_key_here
# Onfido — global fallback
VITE_ONFIDO_API_TOKEN=your_onfido_token_here

# ─── Payments ───────────────────────────────────────────────
# Nigeria
VITE_PAYSTACK_PUBLIC_KEY=pk_live_your_key_here
VITE_OPAY_MERCHANT_ID=your_opay_merchant_id_here
VITE_OPAY_PUBLIC_KEY=your_opay_public_key_here
# Africa (multi-country)
VITE_FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_your_key_here
# Global
VITE_STRIPE_PUBLIC_KEY=pk_live_your_key_here

# ─── Supabase ──────────────────────────────────────────────
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key_here

# ─── Backend API ─────────────────────────────────────────────
VITE_API_BASE_URL=http://localhost:3001/api/v1

# ─── Termii (SMS / WhatsApp OTP) ────────────────────────────
# API key goes in Supabase Edge Function secrets (not frontend)
# Set it with: supabase secrets set TERMII_API_KEY=your_key
# The frontend calls the edge function, never the Termii API directly
VITE_TERMII_SENDER_ID=Aurban

# ─── Feature Flags ───────────────────────────────────────────
VITE_ENABLE_SOCIAL_LOGIN=false
VITE_ENABLE_WHATSAPP_OTP=true
VITE_ENABLE_CAC_LOOKUP=false
VITE_ENABLE_MAPS=false